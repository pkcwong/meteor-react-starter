{
  "name": "meteor-react-starter",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test": "jest --passWithNoTests --ci"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.3",
    "antd": "^3.16.3",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.3.1",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "gridfs-stream": "^1.1.1",
    "history": "^4.9.0",
    "indexof": "0.0.1",
    "meteor-node-stubs": "^0.3.3",
    "multer": "^1.4.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-mounter": "^1.2.0",
    "react-redux": "^5.1.1",
    "react-router": "^4.3.1",
    "redux": "^4.0.1",
    "redux-saga": "^0.16.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^6.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "postcss": "^6.0.22",
    "postcss-load-config": "^2.1.0",
    "regenerator-runtime": "^0.12.1"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "server/"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/server/**"
    ],
    "coverageDirectory": ".reports/jest/coverage/"
  },
  "jest-junit": {
    "outputDirectory": ".reports/jest/"
  }
}
